<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UserData</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-800 text-white p-10">
        <a href="/" class="text-blue-600">Go back to home</a>
        <h1 class="text-4xl mb-5 ">All users</h1>
        <div class="flex flex-wrap gap-2">
            <% if(users.length>0){ %>
                <% users.forEach(function(user){%>
                    <div class="w-72 bg-zinc-600 p-4 rounded-md">
                        <div class="bg-blue-600 w-full h-52 rounded-lg overflow-hidden">
                            <img src="<%=user.image%>" alt="" class="object-cover w-full h-52">
                        </div>
                        <div class="mt-6"><%=user.name%></div>
                        <div><%=user.email%></div>
                        <div class="flex gap-5 justify-between mt-3">
                            <a href="/edit/<%=user._id%>">Edit..</a>
                            <a href="/delete/<%=user._id%>" class="text-red-500">Delete</a>
                        </div>
                    </div>

                <%})%>
            <% }else{%>
                <h1>NO users yet..</h1> 
            <%} %>

        </div>

    </div>
    
</body>
</html>